root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{py, js}]
charset = utf-8
max_line_length = 120
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[.travis.yml]
indent_size = 2
